@model IEnumerable<Genre>

@{
    ViewData["Title"] = " | Manage Genres";
}

<h1 class="mb-2">Manage Genres</h1>

<h5 class="mt-2"><a asp-action="Add" asp-area="Admin">Add a Genre</a></h5>

<table class="table table-bordered table-striped table-sm">
    <thead>
        <tr><th>GenreId</th><th>Name</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (Genre genre in Model)
        {
            <tr>
                <td>@genre.GenreId</td>
                <td>@genre.Name</td>
                <td>
                    <a asp-action="ViewBooks" asp-area="Admin" asp-route-id="@genre.GenreId"
                        my-button>View Books</a>
                    <a asp-action="Edit" asp-area="Admin" asp-route-id="@genre.GenreId"
                        my-button>Edit</a>
                    <a asp-action="Delete" asp-area="Admin" asp-route-id="@genre.GenreId"
                        my-button>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



