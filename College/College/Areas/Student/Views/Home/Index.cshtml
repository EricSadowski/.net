@using College.Areas.Student.Models
@model DutyListViewModel


@{
    ViewBag.Title = "List of Duties ";
}

<a  asp-area="Student" asp-controller="Home" asp-action="Add">Add Duty</a>


<table class="table table-bordered table-striped mt-2">
    <thead>
        <tr>
            <th>Code</th>
            <th>Description</th>
            <th>Status</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (Duty duty in Model.Duties)
        {
            <tr>
                <td>@duty.Code</td>
                <td>@duty.Description</td>
                <td>@duty.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@duty.Code" class="btn btn-primary">Edit</a>

                    <form asp-action="Delete" asp-route-id="@duty.Code" method="post">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>