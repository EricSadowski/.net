@model TaskItem

@{
    ViewBag.Title = "Edit Task";

}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit">


    <input asp-for="Code" type="hidden" value="@Model.Code">
    <div class="mb-3">
        <label asp-for="Code" class="form-label">Code:</label>
        <h3>@Model.Code</h3>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" class="form-control" value="@Model.Description"/>
    </div>

    <div class="mb-3">
        <label asp-for="Location" class="form-label">Location</label>
        <input asp-for="Location" class="form-control" value="@Model.Location"/>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label">Status</label>
        <input asp-for="Status" class="form-control" value="@Model.Status"/>
    </div>


    <div>
        <button type="submit" class="btn btn-dark">Submit</button>
        <a asp-action="Cancel" class="btn btn-outline-dark">Cancel</a>
    </div>

</form>