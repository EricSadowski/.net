@model Book

<div class="text-center">
    <h1>Our Staff Pick!</h1>
    <ul class="list-group">
        <li class="list-group-item list-group-item-heading list-group-item-success">
            <h5>
                <a asp-controller="Book" 
                   asp-action="Details"                   
                   asp-route-id="@Model.BookId" 
                   asp-route-slug="@Model.Title.Slug()">
                    @Model.Title
                </a>
            </h5>
        </li>
    </ul>
</div>